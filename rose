    <style>
        body {
            margin: 0;
            overflow: hidden;
            background: #1a1a1a;
            display: flex;
            justify-content: center;
            align-items: flex-end;
            height: 100vh;
            flex-direction: column;
        }
        .container {
            position: relative;
            width: 100vw;
            height: 60vh;
            font-size: 50px; /* Enlarged size */
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            align-items: flex-end;
        }
        .rose {
            position: relative;
            opacity: 0;
            animation: bloom 3s ease-out forwards;
        }
        @keyframes bloom {
            0% {
                transform: scale(0) translateY(100%);
                opacity: 0;
            }
            50% {
                opacity: 1;
            }
            100% {
                transform: scale(1) translateY(-100px) rotate(-10deg);
                opacity: 1;
            }
        }
        .message {
            font-size: 40px;
            color: white;
            text-align: center;
            opacity: 0;
            transition: opacity 2s ease-in-out;
        }
