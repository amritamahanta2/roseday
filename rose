<body>
    <div class="container" id="bouquet"></div>
    <div class="message" id="message">Happy Rose Day Love ‚ù§Ô∏è</div>
    <script>
        function createRose(delay) {
            let container = document.getElementById("bouquet");
            let flower = document.createElement("div");
            flower.classList.add("rose");
            flower.style.margin = "10px";
            flower.style.animationDelay = delay + "s";
            flower.innerHTML = "üåπ";
            container.appendChild(flower);
        }
        
        for (let i = 0; i < 25; i++) {
            let delay = Math.random() * 2;
            createRose(delay);
        }

        setTimeout(() => {
            document.getElementById("message").style.opacity = 1;
        }, 3500); // Display message after animation is done
    </script>
